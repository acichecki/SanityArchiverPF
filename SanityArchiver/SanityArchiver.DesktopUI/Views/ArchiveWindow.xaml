<Window x:Class="SanityArchiver.DesktopUI.Views.ArchiveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SanityArchiver.DesktopUI.Views"
        xmlns:viewModels="clr-namespace:SanityArchiver.DesktopUI.ViewModels"
        mc:Ignorable="d"
        Title="ArchiveWindow" Height="300" Width="300">
    <StackPanel Orientation="Vertical">
        <ListView ItemsSource="{Binding ElementsToDisplay}"/> 
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Margin = "5 5 5 5" Grid.Column="0" Content="Save"></Button>
                <Button Click="Close_Button" Margin = "5 5 5 5" Grid.Column="1" Content="Cancel"></Button>
            </Grid>
        </StackPanel>
    </StackPanel>
</Window>